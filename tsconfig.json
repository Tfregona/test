{
  "exclude": ["**/*.test.*", "**/tests/*"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": ["es2021","dom"]
    },
    "includes": ["**/*"]
}